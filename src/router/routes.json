{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Dashboard access for authenticated users",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/transactions": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Transactions access for authenticated users", 
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/budgets": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Budgets access for authenticated users",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/goals": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Goals access for authenticated users",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
"/accounts": {
    "protected": true,
    "component": "Accounts",
    "title": "Accounts"
  },
  "/bills": {
    "protected": true,
    "component": "Bills", 
    "title": "Bills"
  },
  "/charts": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Charts access for authenticated users",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public", 
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/**/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Reset password pages are public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/prompt-password/**/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Prompt password pages are public",
            "rule": "public"
          }
        ]
      }
    }
  }
}